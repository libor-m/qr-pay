{
   // Required
   "manifest_version": 2,
   "name": "QR PAY",
   "version": "0.1",

   // Recommended
   "description": "Select payment details and click to get QR to pay.",
   "icons": {
      "16": "img/icon-qr-16.png",
      "48": "img/icon-qr-48.png"
   },

   // action
   "browser_action": {
      "default_icon": "img/icon-qr-16.png",
      "default_title": "QR PAY",
      "default_popup": "popup.html"
   },

   //"permissions": [ "http://*/*", "https://*/*", "tabs" ],
   "permissions": [ "activeTab" ]

}
